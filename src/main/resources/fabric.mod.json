{
  "schemaVersion": 1,
  "id": "charmony",
  "version": "${mod_version}",

  "name": "Charmony",
  "description": "Scaffolding for Charmony mods.",
  "authors": [
    "svenhjol"
  ],
  "icon": "icon.png",

  "license": "MIT",
  "environment": "client",
  "mixins": [
    "charmony.mixins.json"
  ],

  "entrypoints": {
    "client": [
      "svenhjol.charmony.scaffold.fabric.ClientInitializer"
    ]
  },

  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "*",
    "fabric-api": "*",
    "java": ">=21"
  },

  "contact": {
    "homepage": "https://charmony.work",
    "sources": "https://github.com/svenhjol/charmony"
  }
}