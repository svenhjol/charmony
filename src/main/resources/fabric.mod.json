{
  "schemaVersion": 1,
  "id": "charmony-nano",
  "version": "${mod_version}",

  "name": "Charmony (nano)",
  "description": "Scaffolding for Charmony client mods.",
  "authors": [
    "svenhjol"
  ],
  "icon": "icon.png",

  "license": "MIT",
  "environment": "client",
  "mixins": [
    "charmony-nano.mixins.json"
  ],
  "accessWidener": "charmony-nano.accesswidener",

  "entrypoints": {
    "main": [
      "svenhjol.charmony.scaffold.common.CommonInitializer"
    ],
    "client": [
      "svenhjol.charmony.scaffold.client.ClientInitializer"
    ]
  },

  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "*",
    "fabric-api": "*",
    "java": ">=21"
  },

  "contact": {
    "homepage": "https://charmony.work",
    "sources": "https://github.com/svenhjol/charmony-nano"
  }
}